<form method="POST" action="https://dev.jjtestsite.us/BuddyBossGLF/login-processing/" style="display:none;">
    <input type="hidden" name="email" value="@ViewBag.email">
    <input type="hidden" name="academyId" value="@ViewBag.academyId" />
    <input type="hidden" name="userId" value="@ViewBag.userId" />
    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
    <input type="hidden" name="HostMDHash" value="@ViewBag.HostMDHash" />
    <input id="btnSubmit" type="submit" style="display:none;">
</form>

<div class="se-pre-con"></div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
<script type="text/javascript">
    $(function () {
        // Animate loader off screen
        $(".se-pre-con").fadeOut(10000);
        $("#btnSubmit").click();
    });
</script>